{
  "tasks": {
    "start": "deno run -A src/main.ts",
    "debug": "deno run -A --inspect-brk src/main.ts",
    "dev": "deno run -A --watch src/main.ts",
    "migrate": "deno run -A scripts/migrate.ts"
  },
  "imports": {
    "@db/sqlite": "jsr:@db/sqlite@^0.12.0",
    "@hono/hono": "jsr:@hono/hono@^4.7.7",
    "@std/assert": "jsr:@std/assert@1",
    "@std/dotenv": "jsr:@std/dotenv@^0.225.3",
    "@std/fs": "jsr:@std/fs@^1.0.16",
    "@std/http": "jsr:@std/http@^1.0.14",
    "@std/path": "jsr:@std/path@^1.0.8",
    "@std/uuid": "jsr:@std/uuid@^1.0.6"
  },
  "lint": {
    "include": ["src/**/*.(ts|js)"],
    "exclude": [],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["src/**/*.ts"],
    "exclude": []
  }
}
