{
  "tasks": {
    "start": "deno run -A --unstable-ffi main.ts",
    "debug": "deno run -A --unstable-ffi --inspect-brk main.ts",
    "dev": "deno run -A --unstable-ffi --watch main.ts",
    "reload:cache": "deno cache --reload main.ts"
  },
  "imports": {
    "@std/dotenv": "jsr:@std/dotenv@^0.224.0",
    "@std/encoding": "jsr:@std/encoding@^0.224.0",
    "@std/fs": "jsr:@std/fs@^0.224.0",
    "@std/http": "jsr:@std/http@^0.224.0",
    "@std/path": "jsr:@std/path@^0.224.0",
    "@std/uuid": "jsr:@std/uuid@^0.224.0",
    "@db/sqlite": "jsr:@db/sqlite@^0.11.1",
    "@hono/hono": "jsr:@hono/hono@^4.4.0"
  },
  "lint": {
    "include": ["*.ts"],
    "exclude": ["lib/", "static/"],
    "rules": {
      "tags": ["recommended"],
      "include": ["no-unused-vars"]
    }
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 80,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "proseWrap": "preserve",
    "include": ["*.ts"],
    "exclude": ["lib/", "static/", "templates.ts"]
  }
}
